%header.blog-header.py-3
  .row.flex-nowrap.justify-content-between.align-items-center
    .col-4.pt-1

    .col-4.text-center
      .blog-header-logo.text-dark
        = link_to 'ブログ名', root_path, class: 'text-muted'
    .col-4.d-flex.justify-content-end.align-items-center
      - if user_signed_in?
        = link_to 'マイページ', mypage_root_path, class: 'btn btn-sm btn-outline-secondary'
        = link_to 'プロフィール変更', edit_user_registration_path, class: 'btn btn-sm btn-outline-warning ml-2'
        = link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'btn btn-sm btn-outline-danger ml-2'
      - else
        = link_to 'サインアップ', new_user_registration_path, class: 'btn btn-sm btn-outline-secondary'
        = link_to 'ログイン', new_user_session_path, class: 'btn btn-sm btn-outline-secondary ml-2'
